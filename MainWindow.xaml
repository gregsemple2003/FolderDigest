<Window x:Class="FolderDigest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FolderDigest"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="Folder Digest (gitingest‑like)" 
        MinHeight="420" MinWidth="720"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <x:Array x:Key="AttachmentPositions" Type="{x:Type local:AttachmentPosition}">
            <local:AttachmentPosition>Before</local:AttachmentPosition>
            <local:AttachmentPosition>After</local:AttachmentPosition>
        </x:Array>

        <x:Array x:Key="AttachmentTypes" Type="{x:Type sys:String}">
            <sys:String>LogAttachment</sys:String>
        </x:Array>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>              <!-- Row 0: Folder picker -->
            <RowDefinition x:Name="RowDefFiles" Height="2*"/>  <!-- Row 1: File list panel -->
            <RowDefinition Height="Auto"/>              <!-- Row 2: Options -->
            <RowDefinition Height="Auto"/>              <!-- Row 3: Commands -->
            <RowDefinition x:Name="RowDefDigest" Height="1*"/> <!-- Row 4: Digest view -->
            <RowDefinition Height="Auto"/>              <!-- Row 5: note -->
        </Grid.RowDefinitions>

        <!-- Row 0: Folder picker -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>   <!-- NEW: recent dropdown button -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Folder:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtFolder" Grid.Column="1" Height="28" VerticalContentAlignment="Center"/>

            <!-- NEW: Recent folders drop-down -->
            <Button x:Name="btnRecent"
                    Grid.Column="2"
                    Content="▾"
                    Width="28" Height="28"
                    Margin="6,0,0,0"
                    ToolTip="Recent folders"
                    Click="btnRecent_Click"/>

            <Button x:Name="btnBrowse" Grid.Column="3" Content="Browse…" Margin="8,0,0,0" Padding="14,4" Click="btnBrowse_Click"/>
        </Grid>

        <!-- Row 1: File list panel with checkboxes + filter bar -->
        <GroupBox x:Name="grpFiles"
                  Grid.Row="1" 
                  Header="Files in folder (0 KB selected)"
                  Margin="0,4,0,8">
            <DockPanel LastChildFill="True">
                <!-- NEW: Filter bar (right above the list) -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Top"
                            Margin="6,12,0,12">
                    <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="txtFilter"
                             Width="260"
                             Height="28"
                             VerticalContentAlignment="Center"
                             ToolTip="Type to filter the list by path; this does not change checked status. Press Esc to clear."/>
                    <Button x:Name="btnClearFilter"
                            Content="×"
                            Width="28"
                            Height="28"
                            Margin="6,0,0,0"
                            ToolTip="Clear filter"
                            Click="btnClearFilter_Click"/>
                </StackPanel>

                <!-- existing footer under the grid -->
                <TextBlock x:Name="lblFileCount"
                           DockPanel.Dock="Bottom"
                           Margin="0,6,0,0"
                           Foreground="Gray"/>

                <!-- existing grid -->
                <DataGrid x:Name="dgFiles"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserSortColumns="True"
                          IsReadOnly="False"
                          SelectionMode="Extended"
                          HeadersVisibility="Column"
                          VirtualizingPanel.IsVirtualizing="True"
                          EnableRowVirtualization="True"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="40" Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        IsChecked="{Binding Include, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsThreeState="False"
                                        Focusable="False"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ClickMode="Press"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding RelativePath}" Header="Relative Path"
                                            SortMemberPath="RelativePath"
                                            Width="*"/>
                        <DataGridTextColumn Binding="{Binding ModifiedDisplay}" Header="Modified"
                                            SortMemberPath="LastWriteTime"
                                            Width="165"/>
                        <DataGridTextColumn Binding="{Binding SizeDisplay}" Header="Size"
                                            SortMemberPath="SizeBytes"
                                            Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <!-- Row 2: Options -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
            <CheckBox x:Name="chkIncludeHidden" Content="Include hidden files" Margin="0,0,16,0"/>
            <CheckBox x:Name="chkIncludeBinaries" Content="Include binary files" Margin="0,0,16,0"/>
            <TextBlock Text="Max file size (MB):" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtMaxMB" Width="60" Height="28" Text="1" VerticalContentAlignment="Center" ToolTip="Files larger than this are skipped"/>
        </StackPanel>

        <!-- Row 3: Command buttons + progress -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
            <Button x:Name="btnGenerate"
                    Content="Copy Digest"
                    Padding="14,6"
                    Click="btnGenerate_Click"/>
            <Button x:Name="btnAttachments"
                    Content="Attachments…"
                    Padding="14,6"
                    Margin="8,0,0,0"
                    Click="btnAttachments_Click"/>
            <ProgressBar x:Name="progress"
                         Width="170"
                         Height="18"
                         Margin="16,0,0,0"
                         Visibility="Collapsed"
                         IsIndeterminate="True"/>
            <TextBlock x:Name="lblStatus"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Splitter that resizes Row 1 (files) vs Row 4 (digest).
             We place it AT the bottom edge of Rows 2-3 by spanning both (Row 2..3),
             but it visually appears just above the digest (Row 4). -->
        <GridSplitter Grid.Row="2"
                      Grid.RowSpan="2"
                      Height="6"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Bottom"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="True"
                      Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                      Cursor="SizeNS"
                      IsTabStop="False"
                      Panel.ZIndex="100"/>

        <!-- Row 4: Digest output -->
        <TextBox x:Name="txtOutput"
                 Grid.Row="4"
                 FontFamily="Consolas"
                 FontSize="12"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="NoWrap"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>

        <!-- Full-window attachments popup overlay (Esc or Close to dismiss) -->
        <Border x:Name="attachmentsPopup"
                Grid.RowSpan="6"
                Visibility="Collapsed"
                Background="#7F000000"
                Panel.ZIndex="200">
            <!-- Big centered editor panel -->
            <Border HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="32"
                    Padding="12"
                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <DockPanel LastChildFill="True">
                    <StackPanel DockPanel.Dock="Top"
                                Margin="0,0,0,8">
                        <!-- Brief explanation -->
                        <TextBlock Text="Add text attachments to the digest output."
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap" />
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnAddAttachment"
                                    Content="Add"
                                    Padding="12,4"
                                    Margin="0,0,8,0"
                                    Click="btnAddAttachment_Click" />
                            <Button x:Name="btnRemoveAttachment"
                                    Content="Remove"
                                    Padding="12,4"
                                    Click="btnRemoveAttachment_Click" />
                            <Button Content="Close"
                                    Padding="12,4"
                                    Margin="8,0,0,0"
                                    Click="btnCloseAttachments_Click" />
                        </StackPanel>
                    </StackPanel>

                    <DataGrid x:Name="dgAttachments"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="False"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              Margin="0,0,0,4">
                        <DataGrid.Columns>
                            <!-- per-row active flag -->
                            <DataGridCheckBoxColumn Header="On"
                                                    Width="40"
                                                    Binding="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridComboBoxColumn Header="Attach"
                                                    Width="80"
                                                    ItemsSource="{StaticResource AttachmentPositions}"
                                                    SelectedItemBinding="{Binding Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridComboBoxColumn Header="Type"
                                                    Width="120"
                                                    ItemsSource="{StaticResource AttachmentTypes}"
                                                    SelectedItemBinding="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTemplateColumn Header="File" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel>
                                            <TextBox Text="{Binding FilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center"
                                                     Margin="0,0,4,0" />
                                            <Button Content="…"
                                                    Width="26"
                                                    DockPanel.Dock="Right"
                                                    Click="AttachmentBrowse_Click" />
                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Start regex"
                                                Width="220"
                                                Binding="{Binding StartPattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock DockPanel.Dock="Bottom"
                               Margin="0,4,0,0"
                               Foreground="Gray"
                               Text="LogAttachment: contents from the first line matching the regex (if any) through the end of the file are attached." />
                </DockPanel>
            </Border>
        </Border>

        <!-- Row 5: note -->
        <TextBlock Grid.Row="5"
                   Foreground="DimGray"
                   FontSize="12"
                   Margin="0,8,0,0">
            Common heavy/dev folders (e.g. .git, node_modules, bin/obj) and obvious binaries are skipped by default.
        </TextBlock>
    </Grid>
</Window>